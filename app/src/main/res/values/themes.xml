<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Worldy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_raisin</item>
        <item name="colorPrimaryVariant">@color/black_raisin</item>
        <item name="colorOnPrimary">@color/white_isabelline</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_raisin</item>
        <item name="colorSecondaryVariant">@color/black_raisin</item>
        <item name="colorOnSecondary">@color/white_isabelline</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Worldy.Fullscreen" parent="Theme.Worldy">
        <item name="android:actionBarStyle">@style/Widget.Theme.Worldy.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Worldy.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/black_raisin</item>
        <item name="fullscreenTextColor">@color/black_raisin</item>
    </style>
</resources>